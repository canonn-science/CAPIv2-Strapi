{
  "connection": "default",
  "collectionName": "tssites",
  "info": {
    "name": "tssite",
    "description": "Thargoid Structure Sites"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "location": {
      "model": "location",
      "via": "tsSite"
    },
    "siteID": {
      "unique": true,
      "min": 1,
      "type": "integer",
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true
    },
    "longitude": {
      "type": "float",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Active",
        "Inactive"
      ]
    },
    "verified": {
      "type": "boolean"
    },
    "visible": {
      "default": true,
      "type": "boolean"
    }
  }
}
