{
  "connection": "default",
  "collectionName": "lssites",
  "info": {
    "name": "lssite",
    "description": "Lave Spout Sites"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "location": {
      "model": "location",
      "via": "lsSite"
    },
    "siteID": {
      "unique": true,
      "min": 1,
      "type": "integer",
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true
    },
    "longitude": {
      "type": "float",
      "required": true
    },
    "count": {
      "min": 1,
      "type": "integer"
    },
    "type": {
      "type": "string"
    },
    "verified": {
      "type": "boolean"
    },
    "visible": {
      "default": true,
      "type": "boolean"
    }
  }
}
