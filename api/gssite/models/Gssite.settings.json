{
  "connection": "default",
  "collectionName": "gssites",
  "info": {
    "name": "gssite",
    "description": "Guardian Structure Sites"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "location": {
      "model": "location",
      "via": "gsSite"
    },
    "siteID": {
      "unique": true,
      "min": 1,
      "type": "integer",
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true
    },
    "longitude": {
      "type": "float",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Type1",
        "Type2",
        "Type3"
      ]
    },
    "verified": {
      "type": "boolean"
    },
    "visible": {
      "default": true,
      "type": "boolean"
    }
  }
}
