{
  "connection": "default",
  "collectionName": "tsreports",
  "info": {
    "name": "tsreport",
    "description": "Reporting for Thargoid Structures"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "systemName": {
      "type": "string",
      "required": true
    },
    "bodyName": {
      "type": "string",
      "required": true
    },
    "latitude": {
      "type": "float",
      "required": true
    },
    "longitude": {
      "type": "float",
      "required": true
    },
    "status": {
      "enum": [
        "Active",
        "Inactive"
      ],
      "type": "enumeration",
      "required": true
    },
    "cmdrName": {
      "type": "string",
      "required": true
    },
    "cmdrComment": {
      "type": "text"
    },
    "screenshot": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "reportStatus": {
      "enum": [
        "pending",
        "updated",
        "accepted",
        "declined",
        "issue"
      ],
      "type": "enumeration",
      "required": true
    },
    "reportComment": {
      "type": "text"
    },
    "voteCount": {
      "type": "integer"
    },
    "added": {
      "type": "boolean"
    },
    "site": {
      "model": "tssite"
    }
  }
}
